rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can read all user profiles (for names, avatars), but only write to their own.
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can create messages.
    // Users can only read messages if they are the sender or the receiver.
    match /messages/{messageId} {
      allow create: if request.auth != null;
      allow read: if request.auth != null && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
    }
  }
}
