rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      // Any authenticated user can list users, but can only write to their own document.
      allow list, read: if request.auth != null;
      allow create, update, delete: if request.auth.uid == userId;
    }

    match /messages/{messageId} {
      // A user can read a message if they are the sender or receiver.
      allow read: if request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId;
      // A user can create a message if they are the sender.
      allow create: if request.auth.uid == request.resource.data.senderId;
    }
  }
}
